package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {
	/*
	 * Capturem Separadamente dia, mes e ano
	 * 
	 * Para o dia somente será aceito a qtde de dias
	 * 
	 * Para o mês aceite somente valores entre 1 e 12
	 * 
	 * Para o ano aceite somente valores entre 2003 e 1920
	 * 
	 * no final exibir a data completa
	 * 
	 * 
	 */
	public static void main(String[] args) {

		int ano = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano:")); 

		while (ano>=1920 || ano<=2003) {
			ano = Integer.parseInt(JOptionPane.showInputDialog("Digite o ano novamente: "));
		}
		int mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o mês:")); 
		while (mes>=1 || mes<=12) {
			mes = Integer.parseInt(JOptionPane.showInputDialog("Digite o Mês novamente: "));
		}
		int dia = Integer.parseInt(J
				OptionPane.showInputDialog("Digite o dia:")); 

		while (dia<31) {
			dia = Integer.parseInt(JOptionPane.showInputDialog("Digite o dia novamente: "));
		}
		System.out.println("A data completa é: " +dia +mes +ano);
	}
}
