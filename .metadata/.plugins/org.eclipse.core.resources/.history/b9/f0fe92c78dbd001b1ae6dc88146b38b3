package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	/*
	 * Exercicio 3:
	 * Receba o valor do salário bruto, o nome de um colaborador e 
	 * a qtde de faltas.
	 * Se não houver faltas o salario bruto receberá um aumento de 2%.
	 * Calcule o valor do INSS sobre o salário bruto.
	 * Exiba no final o salário bruto, e o salário liquido (retirando
	 * o INSS e 8% do FGTS)
	 */
	public static void main(String[] args) {

		float bruto = Float.parseFloat(JOptionPane.showInputDialog("Digite o valor do Salário Bruto: "));
		int faltas =Integer.parseInt(JOptionPane.showInputDialog("Digite a quantidade de faltas: "));
		String nome = JOptionPane.showInputDialog("Digite o Nome: ").toUpperCase ();
		float inss=0;
		float fgts=(float)0.8;
		float liquido=0;

		if (faltas==0) {
			bruto = bruto + bruto* (float) 0.02;
		}
		else if (bruto<=1100) {
			liquido = bruto - (float) 0.75;
			System.out.println("Seu salário liquido é: "+(liquido-fgts));
		}
		else if (bruto>=1100 && bruto<=2203.48) {
			liquido = bruto - (float) 0.9;
			System.out.println("Seu salário liquido é: "+(liquido-fgts));
		}
		else if (bruto>=2203.48 && bruto<=3305.22) {
			liquido = bruto - (float) 0.12;
			System.out.println("Seu salário liquido é: "+(liquido-fgts));
		}
		
	}
	
}

