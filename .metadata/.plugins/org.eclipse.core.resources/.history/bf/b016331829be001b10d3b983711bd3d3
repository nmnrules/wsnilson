package repeticao;

import javax.swing.JOptionPane;

public class ExemploDo {

		public static void main(String[] args) {
			
			
			String nome = JOptionPane.showInputDialog("Digite seu nome: ").toUpperCase();
			float peso = Float.parseFloat(JOptionPane.showInputDialog("Digite seu peso: "));
			float altura = Float.parseFloat(JOptionPane.showInputDialog("Digite a sua altura: "));
			float imc = peso / (altura*altura);
			System.out.printf("%s seu IMC é: %.2f", nome, imc);
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
		}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
